{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "outDir": "dist/",
    "sourceMap": true,
    // "noImplicitAny": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "es2015",
    "jsx": "react",
    "typeRoots": [
      "node_modules/@types",
    ],
    "lib": ["dom", "es2015", "es2016", "es2017", "esnext", "scripthost"],
    "baseUrl": "./src/js"
  },
  "files": [
    "src/js/index.tsx"
  ],
  "include": [
    "src/js/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts*"
  ]
}
